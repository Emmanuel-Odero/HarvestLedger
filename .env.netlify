# Netlify Production Environment Variables
# Copy these to your Netlify site's environment variables section

# Backend API URLs (replace with your deployed backend URLs)
NEXT_PUBLIC_BACKEND_URL=https://your-backend-api.herokuapp.com
NEXT_PUBLIC_GRAPHQL_URL=https://your-backend-api.herokuapp.com/graphql

# Hedera Configuration (use your production/testnet values)
NEXT_PUBLIC_HEDERA_NETWORK=testnet
NEXT_PUBLIC_HEDERA_RPC_URL=https://testnet.hashio.io/api
NEXT_PUBLIC_MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com/api/v1

# Application Configuration
NEXT_PUBLIC_APP_NAME=HarvestLedger
NEXT_PUBLIC_APP_VERSION=1.0.0

# Build Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1