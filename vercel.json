{
    "buildCommand": "cd frontend && npm ci && npm run build",
    "outputDirectory": "frontend/.next",
    "installCommand": "cd frontend && npm ci",
    "framework": "nextjs",
    "functions": {
        "frontend/app/api/**/*.ts": {
            "runtime": "nodejs18.x"
        }
    },
    "rewrites": [
        {
            "source": "/login",
            "destination": "/auth/signin"
        }
    ],
    "redirects": [
        {
            "source": "/login",
            "destination": "/auth/signin",
            "permanent": false
        }
    ]
}